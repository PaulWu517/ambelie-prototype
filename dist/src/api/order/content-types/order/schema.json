{
    "kind": "collectionType",
    "collectionName": "orders",
    "info": {
        "singularName": "order",
        "pluralName": "orders",
        "displayName": "Order",
        "description": "Customer orders"
    },
    "options": {
        "draftAndPublish": false
    },
    "pluginOptions": {},
    "attributes": {
        "orderNumber": {
            "type": "string",
            "unique": true,
            "required": true
        },
        "status": {
            "type": "enumeration",
            "enum": [
                "pending",
                "paid",
                "processing",
                "shipped",
                "delivered",
                "completed",
                "cancelled"
            ],
            "default": "pending",
            "required": true
        },
        "totalAmount": {
            "type": "decimal",
            "required": true
        },
        "subtotal": {
            "type": "decimal",
            "required": true
        },
        "shippingCost": {
            "type": "decimal",
            "default": 0
        },
        "tax": {
            "type": "decimal",
            "default": 0
        },
        "currency": {
            "type": "string",
            "default": "USD",
            "required": true
        },
        "customerEmail": {
            "type": "email",
            "required": true
        },
        "customerName": {
            "type": "string",
            "required": true
        },
        "customerPhone": {
            "type": "string"
        },
        "shippingAddress": {
            "type": "json",
            "required": true
        },
        "billingAddress": {
            "type": "json"
        },
        "orderItems": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::order-item.order-item",
            "mappedBy": "order"
        },
        "payments": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::payment.payment",
            "mappedBy": "order"
        },
        "notes": {
            "type": "text"
        },
        "orderDate": {
            "type": "datetime"
        },
        "shippingDate": {
            "type": "datetime"
        },
        "deliveryDate": {
            "type": "datetime"
        },
        "trackingNumber": {
            "type": "string"
        },
        "shippingMethod": {
            "type": "string"
        }
    }
}
